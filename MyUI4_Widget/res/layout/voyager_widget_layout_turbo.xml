            <TextView android:id="@id/v_connected" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/connected" style="@style/WhiteText.vDate" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>